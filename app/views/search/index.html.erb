<ul>
  <li>
    Name: <%= @station.name %>
  </li>
  <li>
    Address: <%= @station.address %>
  </li>
  <li>
    Fuel Type: <%= @station.fuel_type %>
  </li>
  <li>
    Access Times:
    <% @station.access_times.each do |time| %>
      <%= "Day: #{time[0]}, Hours: #{time[1]}" %><br>
    <% end %>
  </li>
  <li>
    Time down to the second! <%= @directions.time %>
  </li>
  <li>
    <% @directions.instructions.each do |instruction| %>
      <%= instruction %><br>
    <% end %>
  </li>
</ul>
